{
    "compilerOptions": {
        "target": "ES5",
        "outDir": "../tmp",
        "module": "commonjs",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "declaration": true,
        "strictNullChecks": false,
        "baseUrl": "../src",
        "types": [
            "core-js",
            "deep-freeze",
            "jasmine",
            "lodash",
            "node",
            "source-map",
            "uglify-js",
            "webpack"
        ]
    },
    "compileOnSave": false,
    "filesGlob": [
        "src/**/*.ts",
        "spec/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "atom": {
        "rewriteTsconfig": false
    }
}
